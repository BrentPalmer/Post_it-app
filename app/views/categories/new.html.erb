<%= render 'shared/content_title', title: "Create new category" %>

<%= render 'shared/errors', obj: @category %>

<div class='well'>
  <div class='control-group'>
    <%= form_for @category do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
  </div>
  <%= f.submit "Create Category", class: "btn btn-primary" %>
  <% end %>
</div>